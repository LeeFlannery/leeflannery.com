---
import '../styles/global.css';
import NavReact from '../components/NavSection';
import LinksSection from '../components/LinksSection.astro';
import faviconIco from '../assets/favicon.ico';
import faviconSvg from '../assets/favicon.svg';
import faviconPng from '../assets/favicon-32x32.png';
import appleTouchIcon from '../assets/apple-touch-icon.png';

const GA_ID = import.meta.env.PUBLIC_GA_MEASUREMENT_ID || 'G-XXXXXXXXXX';
---

<!DOCTYPE html>
<html lang="en" class="">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Lee Flannery dot com</title>
    <link rel="shortcut icon" href={faviconIco} type="image/x-icon" />
    <link rel="icon" href={faviconIco} type="image/x-icon" />
    <link rel="icon" href={faviconSvg.src} type="image/svg+xml" />
    <link rel="icon" href={faviconPng.src} type="image/png" sizes="32x32" />
    <link rel="apple-touch-icon" href={appleTouchIcon.src} sizes="180x180" />
    <link rel="manifest" href="/site.webmanifest" />
    <meta name="theme-color" content="#000000" />
    
    <!-- Google Analytics -->
    <script async src={`https://www.googletagmanager.com/gtag/js?id=${GA_ID}`}></script>
    <script define:vars={{ GA_ID }}>
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());
      gtag('config', GA_ID);
    </script>
    
    <!-- Scroll Effects -->
    <script>
      import { initScrollEffects } from '../utils/scrollEffects.ts';
      document.addEventListener('DOMContentLoaded', initScrollEffects);
    </script>
  </head>
  <body class="bg-white text-black dark:bg-black dark:text-white font-sans">
    <NavReact client:load />
    <slot />
    <LinksSection />
  </body>
</html>