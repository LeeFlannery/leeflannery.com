---
import BaseLayout from '../layouts/BaseLayout.astro';
import ProjectCard from '../components/ProjectCard';
---

<BaseLayout>
  <div class="py-12 bg-black min-h-screen">
    <h1 class="text-4xl font-bold text-center font-mono text-yellow-400 mb-12">Projects</h1>
    <ProjectCard
      client:load
      name="Data Presentation Playground"
      githubUrl="https://github.com/LeeFlannery/dashboard-playground"
      projectUrl="https://dashboard-playground-delta.vercel.app/"
      imageUrl="https://images.unsplash.com/photo-1461749280684-dccba630e2f6?auto=format&fit=crop&w=600&q=80"
      description="A playground for experimenting with data presentation, dashboards, the Rechart library. Built with React, Next.js and TypeScript. Try the live demo or see the code on GitHub."
    />
  </div>
</BaseLayout> 